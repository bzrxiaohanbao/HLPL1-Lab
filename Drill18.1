#include "std_lib_facilities.h" 
//1. Array initialization
int ar[10] = { 1, 2, 4, 8, 16, 32, 64, 128, 256, 512 };
//2. Use an int array parameter and an int parameter to define the function fun (), which indicates the number of elements in the array. 
void fun(int a[], int n)
{
	//3.a. Define AR1 array
	int ar1[10];
	//3.b. Copy the value from AR to AR1
	for (int i = 0; i < n; ++i) {
		ar1[i] = a[i];
	}	
	//3.c. Output array
	for (int i = 0; i < n; ++i) {
		cout << ar1[i] << " ";
	}	
	cout << endl;
	//3.d.Define a pointer p to int and initialize it with an array allocated in the memory, which has the same number of elements as the parameter array.
	int* p = new int[n];
	//3.e. assignment
	for (int i = 0; i < n; ++i) {
		p[i] = a[i];
	}
	//3.fun. Output array
	for (int i = 0; i < n; ++i) {
		cout << p[i] << " ";
	}	
	cout << endl;
	//3.g.delete array
	delete[] p;
}
int main()
try {
	//4.a. Call the function
	fun(ar, 10);
	//5.b.Define array
	int aa[10], temp = 1;
	for (int i = 0; i < 10; ++i){
		temp *= (i + 1);
		aa[i] = temp;
	}
	//4.c. Call the function 
	fun(aa, 10);
	return 0;
}
catch (exception& e){
	cerr << "Exception! " << e.what() << endl;
	return 1;
}
catch (...){
	cerr << "Some exceptions! " << endl;
	return 2;
}
